<MudPaper Width="100%" Elevation="0" Class="py-3 pa-4 bg-gray-200">
    <MudNavMenu Color="Color.Primary">
        <MudNavLink Icon="@Icons.Material.Filled.Home" Href="@(_currentRequest.BaseUrl+"/Home")">Home</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Settings" Href="@(_currentRequest.BaseUrl+"/Settings")">Settings</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.AccountBalanceWallet" Href="@(_currentRequest.BaseUrl+"/Transactions")">Transactions</MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.SwapHorizontalCircle" Href="@(_currentRequest.BaseUrl+"/Transfer")">Transfer</MudNavLink>

        <MudNavLink Icon="@Icons.Material.Filled.Logout" Href="@(_currentRequest.BaseUrl+"/Login")">Logout</MudNavLink>
    </MudNavMenu>
</MudPaper>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await js.InvokeVoidAsync("HideNavGroup");
            StateHasChanged();
        }
    }
}